<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="student">


  <select id="selectAllStudents" resultType="StudentVo">
    select * from student
  </select>
  
  <!-- 학생 정보 조회 -->
  <select id="getStudentTestById" parameterType="int" resultType="StudentVo">
    select * from student where id = #{id}
  </select>  
  
  <!-- 학생 정보 조회 -->
  <select id="getStudentTestByVo" parameterType="studentVo" resultType="StudentVo">
    select * from student where id = #{id}
  </select> 
  
  <!-- 학생 정보 페이징 조회 -->
  <select id="getStudentPageList" parameterType="map" resultType="StudentVo">
    SELECT *
     FROM
      (SELECT a.*, ROWNUM rn
        FROM
         (SELECT *
           FROM student
            ORDER BY name) a )
     WHERE rn BETWEEN (#{page}-1)*#{pageSize}+1 AND #{page}*#{pageSize}
  </select>
  
  <!-- 전체 건수 -->
  <select id="getStudentTotCnt" resultType="int">
    SELECT count(*) FROM student	
  </select>
  
  <!-- 학생정보 업데이트 -->
  <update id="studentUpdate" parameterType="StudentVo">
	update student set pic=#{pic},
						picpath=#{picpath},
						picname=#{picname},
						addr1=#{addr1},
						addr2=#{addr2},
						zipcd=#{zipcd},
						name=#{name}
	where id=#{id}
  </update>
</mapper>